.message {
    border-bottom: 1px solid #eee;
    background: #fff;
    display: block;
    padding: 0 14px;
}

.info {
    text-align: right;
    font-size: 12px;
    color: #999;
    margin-bottom: 6px;
}

.content {
    width: 100%;
    color: #666;
    font-size: 13px;
    padding: 10px 0;
    line-height: 22px;
    margin-right: 0;
    transition: all 0.4s;
    transform: translateX(90px);
    margin-left: -90px
}

.empty {
    text-align: center;
    margin: 20px;
    color: #999;
}